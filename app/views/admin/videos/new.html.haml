%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10' do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              = link_to 'Add a New Video', new_admin_video_path
          %br
          %fieldset
            .form-group
              = f.text_field :title, label: 'Title'
            .form-group
              = f.select :category, select_collection_category_values, { label: 'Category' }
            .form-group
              = f.text_area :description, label: 'Description', rows: 6
            .form-group
              %label.control-label.col-sm-3 Large Cover
              .col-sm-12
                %col.btn.btn-file
                  %input.form-control(type="file")
            .form-group
              %label.control-label.col-sm-3 Small Cover
              .col-sm-12
                %col.btn.btn-file
                  %input.form-control(type="file")
          %fieldset.actions.form-group
            .col-sm-10.col-md-offset-2
              = f.submit 'Add video', class: 'btn btn-default'