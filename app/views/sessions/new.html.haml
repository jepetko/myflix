%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/sign_in', method: 'post', class: 'login_in' do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            .row
              .col-sm-4
                = f.email_field :email, value: params[:email]
          .form-group
            .row
              .col-sm-4
                = f.password_field :password, value: params[:password]
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
