.panel.panel-default
  .panel-body
    =form_tag advanced_search_path, method: :get, class: 'advanced_search' do
      .form-group
        %fieldset
          .form-group
            .row
              .col-sm-11
                =search_field_tag :query, @query, placeholder: 'Search videos by title, description', class: 'form-control'
              .col-sm-1
                =button_tag type: :submit, class: 'btn btn-primary' do
                  %span.glyphicon.glyphicon-search
                  Search
.panel.panel-default
  .panel-heading
    = "#{@videos.count} videos found"
  .panel-body
    - @videos.each do |video|
      = render 'videos/video', video: video