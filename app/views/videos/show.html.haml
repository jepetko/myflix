%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{get_img_url(@video)}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: #{@video.calculate_rating_average}/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [ @video, @review ] do |f|
        %fieldset
          .form-group
            .row
              .col-sm-3
                = f.select :rating, select_collection_rating_values, { label: 'Rate this video' }
          .form-group
            .row
              .col-sm-8
                = f.text_area :content, label: 'Write a review', rows: 6
        %fieldset.form-group.actions.clearfix
          = f.submit 'Submit'
          %a(href="") Cancel
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                %p= review.content