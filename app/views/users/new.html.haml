%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user) do |f|
        %header
          %h1 Register
        = f.text_field :email
        = f.password_field :password
        = f.password_field :password_confirmation
        = f.text_field :full_name
        = hidden_field_tag :token, @token if @token
        %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-label="Register (for a fee)" data-key="#{Rails.configuration.stripe[:publishable_key]}" data-name="Myflix charge" data-description="Enjoy myflix for 9.99$" data-amount="999" data-locale="auto")
