%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
          = bootstrap_form_tag url: my_queue_path, method: :post do |f|
            %table.table
              %thead
                %tr
                  %th(width="10%") List Order
                  %th(width="30%") Video Title
                  %th(width="10%") Play
                  %th(width="20%") Rating
                  %th(width="15%") Genre
                  %th(width="15%") Remove
              %tbody
                - @queue_items.each do |queued_video|
                  %tr
                    %td
                      = f.text_field :order_value, value: queued_video.order_value, hide_label: true
                    %td
                      = link_to queued_video.video.title, video_path(queued_video.video)
                    %td
                      = button_to "Play", nil, class: "btn btn-default"
                    %td
                      = f.select :rating, select_collection_rating_values, selected: queued_video.video.rating_for_user(current_user), hide_label: true
                    %td
                      = link_to queued_video.video.category.name, category_path(queued_video.video.category)
                    %td
                      = link_to "", method: :post do
                        %i.glyphicon.glyphicon-remove
            = button_to "Update Instant Queue", nil, class: "btn btn-default"
